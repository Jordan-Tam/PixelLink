<header>
  <a href="/home" id="goBack">â‡¦ Return to home page</a>
  <h1>User Browser</h1>
</header>
<main>
  <form name="userSearchForm" id="userSearchForm" action="/users" method="POST">
    <label for="searchBar">Search by name:</label>
    <input type="text" name="searchBar" id="searchBar" />
    <br />
    <label for="gameSelect">Search by game:</label>
    <select name="gameSelect" id="gameSelect">
      <option></option>
      {{#each games}}
        <option>{{this.name}}</option>
      {{/each}}
    </select>
    <div id="allFormsContainer">
      {{#each games}}
        <div class="gameFormContainer" hidden>
          <h5 id = "{{this.name}}">{{this.name}}</h5>
          {{#each this.form}}
            <label>{{this.field}}
              {{#if this.options.length}}
                <select name="gameInput{{@../index}}-{{@index}}" id="gameInput{{@../index}}-{{@index}}">
                  {{#each this.options}}
                    <option
                      name="gameInput{{@../../index}}-{{@../index}}-{{@index}}"
                      id="gameInput{{@../../index}}-{{@../index}}-{{@index}}"
                      value={{this}}
                    >{{this}}</option>
                  {{/each}}
                </select>
              {{else}}
                <input
                  type="text"
                  name="gameInput{{@../index}}-{{@index}}"
                  id="gameInput{{@../index}}-{{@index}}"
                />
              {{/if}}
            </label>
            <br />
          {{/each}}
        </div>
      {{/each}}
    </div>
    <br />
    <button type="submit" name="submitButton" id="submitButton">Submit</button>
  </form>

  <div id="usersContainer">
    {{#each users}}
      <div class="userDiv">
        <h2><a href="/users/{{this._id}}">{{this.username}}</a></h2>
        <ul>
          {{#each this.games}}
            <li>
              <a href="/games/{{this.gameId}}">{{this.gameName}}</a>
              <ul>
                {{#each this.userGameInfo}}
                  <li>{{this.field_name}}: {{this.value}}</li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
  <p id="error" hidden>No users found!</p>
</main>